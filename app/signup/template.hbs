<div id="signup">
  <div class="signup-cover">
    <img src="assets/images/signup-cover.png">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
        <form class="signup-form" {{action "signup" on="submit"}}>
          <h4 class="hidden-sm-down signup-title"><i class="fa fa-plus-square-o"></i>&nbsp; Signup</h4>
          <div class="row">
            <div class="col-md-6">
              <label>First name</label>
              <div class="form-group">
                {{input type="text" required=true value=firstName placeholder="Enter your first name" class="form-control"}}
              </div>
            </div>
            <div class="col-md-6">
              <label>Last name</label>
              <div class="form-group">
                {{input type="text" required=true value=lastName placeholder="Enter your last name" class="form-control"}}
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Email address</label>
            {{input type="text" required=true value=email placeholder="Email address" class="form-control"}}
          </div>
          <div class="form-group">
            <label>Phone number</label>
            {{input type="text" required=true value=phone placeholder="Phone number" class="form-control"}}
          </div>
          <div class="row">
            <div class="col-md-5 col-lg-5">
              <label>Street address</label>
              <div class="form-group">
                {{input type="text" required=true value=street placeholder="Street address" class="form-control"}}
              </div>
            </div>
            <div class="col-md-3 cl-lg-3">
              <div class="form-group">
                <label>City</label>
                {{input type="text" required=true value=city placeholder="City" class="form-control"}}
              </div>
            </div>
            <div class="col-md-2 col-lg-2">
              <div class="form-group">
                <label>State</label>
                {{input type="text" required=true value=state placeholder="State" class="form-control"}}
              </div>
            </div>
            <div class="col-md-2 col-lg-2">
              <div class="form-group">
                <label>Zip</label>
                {{input type="text" required=true value=zip placeholder="Zip" class="form-control"}}
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Password</label>
            {{input type="password" required=true value=password placeholder="Password" class="form-control"}}
          </div>
          <button type="submit" class="btn btn-primary-outline {{if isCreating "disabled"}}">
            Create account {{#if isCreating}}<i class="fa fa-spinner fa-spin"></i>{{/if}}
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
